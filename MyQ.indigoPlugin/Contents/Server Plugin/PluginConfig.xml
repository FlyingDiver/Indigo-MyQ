<?xml version="1.0"?>
<PluginConfig>
    <SupportURL>http://forums.indigodomo.com/viewforum.php?f=214</SupportURL>
    <Field id="myqLogin" type="textfield">
        <Label>Login:</Label>
    </Field>
    <Field id="myqPassword" type="textfield" secure="true">
        <Label>Password:</Label>
    </Field>
    <Field type="menu" id="openerBrand" defaultValue="chamberlain">
        <Label>Brand:</Label>
        <List>
            <Option value="chamberlain">Chamberlain</Option>
            <Option value="craftsman">Craftsman</Option>
            <Option value="liftmaster">Liftmaster</Option>
        </List>
    </Field>
    <Field id="statusFrequency" type="textfield" defaultValue="10">
        <Label>Update device status frequency (minutes):</Label>
    </Field>
    <Field id="statusNote" type="label" fontSize="small" fontColor="darkgray">
        <Label>The plugin will not update the devices if set to zero.  Minimum is 5.</Label>
    </Field>
    <Field id="statusDelay" type="textfield" defaultValue="30">
        <Label>Delay after MyQ command before status update (seconds):</Label>
    </Field>
    <Field id="sep1" type="separator"/>
    <Field id="updateFrequency" type="textfield" defaultValue="24">
        <Label>Check for plugin update frequency (hours):</Label>
    </Field>
    <Field id="updateNote" type="label" fontSize="small" fontColor="darkgray">
        <Label>The plugin will not check for updates if the frequency is set to zero.</Label>
    </Field>
    <Field id="sep2" type="separator"/>
    <Field id="logLevel" type="menu" defaultValue="20">
        <Label>Event Logging Level:</Label>
        <List>
            <Option value="10">Debugging Messages</Option>
            <Option value="20">Informational Messages</Option>
            <Option value="30">Warning Messages</Option>
            <Option value="40">Error Messages</Option>
            <Option value="50">Critical Errors Only</Option>
        </List>
    </Field>       
</PluginConfig>
